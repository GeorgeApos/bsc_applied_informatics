<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".r2Activity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context="com.example.android.courtcounter.MainActivity">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#616161"
                    android:text="Team A" />

                <TextView
                    android:id="@+id/team_a_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:textSize="56sp"
                    android:layout_marginBottom="24dp"
                    android:text="0" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="addThreeForTeamA"
                    android:padding="20dp"
                    android:text="+3 Points"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorButton" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="addTwoForTeamA"
                    android:padding="20dp"
                    android:text="+2 Points"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorButton" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="addOneForTeamA"
                    android:padding="20dp"
                    android:text="Free Throw"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorButton" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="addReboundForTeamA"
                    android:padding="20dp"
                    android:text="Rebound"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorButton" />

                <TextView
                    android:id="@+id/rebounds_a_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:textSize="56sp"
                    android:layout_marginBottom="24dp"
                    android:text="0" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="addAssistForTeamA"
                    android:padding="20dp"
                    android:text="Assist"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorButton" />

                <TextView
                    android:id="@+id/assists_a_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:textSize="56sp"
                    android:layout_marginBottom="24dp"
                    android:text="0" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="addMistakeForTeamA"
                    android:padding="20dp"
                    android:text="Mistake"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorButton" />

                <TextView
                    android:id="@+id/mistakes_a_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:textSize="56sp"
                    android:layout_marginBottom="24dp"
                    android:text="0" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="addFoulForTeamA"
                    android:padding="20dp"
                    android:text="Foul"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorButton" />

                <TextView
                    android:id="@+id/fouls_a_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:textSize="56sp"
                    android:layout_marginBottom="24dp"
                    android:text="0" />

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="16dp"
                />


            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context="com.example.android.courtcounter.MainActivity">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#616161"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="Team B" />

                <TextView
                    android:id="@+id/team_b_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:fontFamily="sans-serif-light"
                    android:textSize="56dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="24dp"
                    android:text="0" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="addThreeForTeamB"
                    android:padding="20dp"
                    android:text="+3 Points"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorButton" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="addTwoForTeamB"
                    android:padding="20dp"
                    android:text="+2 Points"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorButton" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="addOneForTeamB"
                    android:padding="20dp"
                    android:text="Free Throw"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorButton" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="addReboundForTeamB"
                    android:padding="20dp"
                    android:text="Rebound"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorButton" />

                <TextView
                    android:id="@+id/rebounds_b_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:textSize="56sp"
                    android:layout_marginBottom="24dp"
                    android:text="0" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="addAssistForTeamB"
                    android:padding="20dp"
                    android:text="Assist"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorButton" />

                <TextView
                    android:id="@+id/assists_b_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:textSize="56sp"
                    android:layout_marginBottom="24dp"
                    android:text="0" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="addMistakeForTeamB"
                    android:padding="20dp"
                    android:text="Mistake"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorButton" />

                <TextView
                    android:id="@+id/mistakes_b_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:textSize="56sp"
                    android:layout_marginBottom="24dp"
                    android:text="0" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginBottom="8dp"
                    android:onClick="addFoulForTeamB"
                    android:padding="20dp"
                    android:text="Foul"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorButton" />

                <TextView
                    android:id="@+id/fouls_b_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:padding="4dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#000000"
                    android:textSize="56sp"
                    android:layout_marginBottom="24dp"
                    android:text="0" />

            </LinearLayout>

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"></Space>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:onClick="resetScore"
            android:text="Reset"
            android:textSize="18sp"
            android:textStyle="bold"

            app:backgroundTint="@color/colorButton" />
    </RelativeLayout>
</ScrollView>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomNav"
        android:layout_alignParentBottom="true"
        app:menu="@menu/menu"
        tools:ignore="MissingConstraints" />
</RelativeLayout>